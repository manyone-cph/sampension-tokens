{
  "name": "@manyone-cph/sampension-tokens",
  "version": "0.2.4",
  "description": "A package to serve tokens from a design system",
  "private": false,
  "main": "index.js",
  "license": "ISC",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "clean:token-transformer": "npx rimraf ./tokens",
    "clean:style-dictionary": "npx rimraf ./dist && style-dictionary clean",
    "clean": "npm run clean:token-transformer && npm run clean:style-dictionary",
    "generate-tokens:shared": "npx token-transformer tokens.json ./tokens/shared.json shared/core/typography,shared/core/color,shared/core/dimension,shared/semantic/typography,shared/semantic/color,shared/semantic/dimension,shared/semantic/border,shared/composition/typography,shared/composition/atoms,shared/composition/molecules,shared/composition/layout --expandTypography=true",
    "generate-styles": "node build-shared.js",
    "build": "npm run clean && npm run generate-tokens:shared && npm run generate-styles"
  },
  "publishConfig": {
    "@manyone-cph:registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "node-fetch": "^3.2.0",
    "token-transformer": "^0.0.29"
  },
  "devDependencies": {
    "style-dictionary": "^3.7.2"
  }
}
