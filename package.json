{
  "name": "@manyone/sampension-tokens",
  "version": "0.0.0-development",
  "description": "A package to serve tokens from a design system",
  "private": false,
  "main": "index.js",
  "license": "ISC",
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/manyone-cph/sampension-tokens.git"
  },
  "scripts": {
    "clean:token-transformer": "npx rimraf ./tokens",
    "clean:style-dictionary": "npx rimraf ./dist && style-dictionary clean",
    "clean": "npm run clean:token-transformer && npm run clean:style-dictionary",
    "generate-tokens:shared": "npx token-transformer tokens.json ./tokens/shared.json shared/core/typography,shared/core/color,shared/core/dimension,shared/semantic/typography,shared/semantic/color,shared/semantic/dimension,shared/semantic/border,shared/composition/typography,shared/composition/atoms,shared/composition/molecules,shared/composition/layout --expandTypography=true --expandComposition=true",
    "generate-styles": "node build-shared.js",
    "build": "npm run clean && npm run generate-tokens:shared && npm run generate-styles",
  },
  "publishConfig": {
    "@manyone:registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "node-fetch": "^3.2.0",
    "token-transformer": "^0.0.29"
  },
  "devDependencies": {
    "semantic-release": "^20.1.0",
    "style-dictionary": "^3.7.2"
  }
}